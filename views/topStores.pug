extends layout
block content
  .inner
   h2= title
   table.table 
    thead
      tr
        th photo
        th ranking
        th name
        th reviews
        th Average Rating
    tbody
    each store, i in stores
      tr
        td
          a(href=`/stores/${store.slug}`)
           img(src=`/uploads/${store.photo || store.png}` width=200)
        td #{i+1}
        td: a(href=`/stores/${stores.slug}`)= store.name
        td= store.reviews.length
        td #{Math.round(store.averageRating * 10) / 10}  / 5